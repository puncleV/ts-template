{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "TS template",
  "main": "build/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node build/app.js",
    "start:watch": "nodemon",
    "lint": "eslint . --fix --ext .ts",
    "test": "jest --env=node --colors --coverage test"
  },
  "keywords": [
    "template",
    "Typescript",
    "node",
    "ts",
    "sample"
  ],
  "author": "Kozlov Viktor",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "25.1.2",
    "@types/node": "13.7.1",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/eslint-plugin-tslint": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "casual": "1.6.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-jest": "23.7.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.2",
    "jest": "25.1.0",
    "lint-staged": "10.0.7",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "source-map-support": "0.5.16"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --config .prettierrc --write",
      "eslint . --fix --ext .ts",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-checkout": "npm i",
      "post-merge": "npm i",
      "pre-commit": "lint-staged"
    }
  }
}
