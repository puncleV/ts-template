{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "TS template",
  "main": "build/app.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node build/app.js",
    "start:watch": "nodemon",
    "lint": "tslint -c tslint.json -p tsconfig.json -t codeFrame '{src,test}/**/*.ts'",
    "test": "jest --env=node --colors --coverage test"
  },
  "keywords": [
    "template",
    "Typescript",
    "node",
    "ts",
    "sample"
  ],
  "author": "Kozlov Viktor",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "25.1.2",
    "@types/node": "13.7.1",
    "casual": "1.6.2",
    "husky": "4.2.2",
    "jest": "25.1.0",
    "lint-staged": "10.0.7",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "tslint": "6.0.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.5",
    "typescript-tslint-plugin": "0.5.5"
  },
  "dependencies": {
    "source-map-support": "0.5.16"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --config .prettierrc --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-checkout": "npm i",
      "post-merge": "npm i",
      "pre-commit": "lint-staged"
    }
  }
}
